<% provide(:title, @quiz.name) %>

<div class="row">
  <h1><%=@quiz.name%></h1>
</div>

<div class="row text-center">
  <% @quiz.categories.each do |c| %>
    <%= c.name %>
  <% end %>
</div>

<div class="row text-center">
  Created: <%= @quiz.created_at %>
  Updated: <%= @quiz.updated_at %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <h2 style="text-align:left;">Lessons:</h2>
    <% if @quiz.lessons.count > 0 %>
      <ul class="lessons">
        <%= render @quiz.lessons %>
      </ul>
    <% else %>
      <p>This quiz has no lessons. Add one!</p>
    <% end %>

    <%= link_to "+ Add Lesson", new_quiz_lesson_path(@quiz) %>
  </div>

  <div class="col-md-4">
    <h2 style="text-align:left;">Questions:</h2>
    <% if @quiz.questions.count > 0 %>
      <ul class="quizzes">
        <%= render @quiz.questions %>
      </ul>
    <% else %>
      <p>This quiz has no questions. Add one!</p>
    <% end %>

    <%= link_to "+ Add Question", new_quiz_question_path(@quiz) %>
  </div>
</div>
<br />
<br />

<div class="row">
  <div class="text-center">
    <%= link_to "Take Quiz", do_quiz_path, :class => "btn btn-primary btn-lg" %>
  </div>
</div>
