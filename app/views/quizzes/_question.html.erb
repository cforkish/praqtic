<h3 class='text-center'>Question:</h3>
<div class='col-md-offset-2 col-md-8'>
  <p class='text-center'><%= question.question %></p>
</div>

<%= form_tag( {controller: "quizzes", action: "submit_question"}, class: "form-horizontal") do %>

  <%= hidden_field_tag 'question', question.id %>

  <% question.answers.each_with_index do |a, index| %>
    <div class="form-group">
      <div class='col-md-offset-3 col-md-7'>
        <%= (index + 65).chr %>) &nbsp;
        <%= radio_button_tag :answer_id, a.id, false %>
        <%= label_tag :answer_id, a.answer, class: 'control-label' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="text-center">
      <button type="submit" class="btn btn-success btn-lg">Submit Answer</button>
    </div>
  </div>

<% end %>
