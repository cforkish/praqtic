  <div class="lesson">
    <div class="form-group">
      <%= f.label :name, class: 'col-md-2 control-label' %>
      <div class='col-md-8'>
        <%= f.text_field :name, class: 'form-control'  %>
      </div>

      <div class='col-md-2'>
        <div class="remove_lesson btn btn-mini btn-danger form-control">Remove</div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :link, class: 'col-md-2 control-label' %>
      <div class='col-md-8'>
        <%= f.text_field :link, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group">
    </div>
  </div>
<% end %>
