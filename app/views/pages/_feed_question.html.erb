<li id='<%= feed_question.id %>'>
  <div class='panel panel-info'>
    <div class='panel-heading'>
      <div class='panel-title'><%= feed_question.name %></div>
      <%= feed_question.content %>
    </div>
    <div class='panel-body'>
      <%= form_tag('feed_questions/submit', :remote => true, class: "form-horizontal") do %>

        <%= hidden_field_tag 'question', feed_question.id %>

        <% feed_question.answers.each_with_index do |a, index| %>
          <div class="form-group">
            <div class='col-md-offset-3 col-md-7'>
              <%= (index + 65).chr %>) &nbsp;
              <%= radio_button_tag :answer_id, a.id, false %>
              <%= label_tag :answer_id, a.answer, class: 'control-label' %>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg">Submit Answer</button>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</li>